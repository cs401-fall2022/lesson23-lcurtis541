extends layout

block content
  h1(class="title") Landon's Blog 
  hr

  div(class="button_container")
    form(method="POST" action="/delete")
      button(class= "delete_post_button" type="submit")
        p(class="button_text") Delete Recent Post
    button(class= "delete_post_button" type="submit")
      p(class="button_text") Create New Post

  div(class="blog_container") 
    each item in data 
      div(class="blog_post")
        div(class="blog_post_title_container")
          h2(class="blog_post_title") #{item.blog_title}
        hr
        p(class="blog_post_txt") #{item.blog_txt} 
      br
  br

  div(class="blog_forum_container")
    h2(class="blog_forum_title") Create New Post
    hr
    form(method="POST" action="/add" class="blog_forum")
      input(type="txt" name="blog_title" id="blog_title" class="blog_input" placeholder="Title")
      input(type="txt" name="blog_txt" id="blog_txt" class="blog_input" placeholder="Post Text")
      button(type="submit" class="submit_button") Submit 
